<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#F4F4F4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/linearlayoutTodoBack"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_220dp"
            android:background="@drawable/todo"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/titlepage"
            android:layout_marginTop="@dimen/d_122dp"
            android:textSize="25sp"
            android:textColor="#7689DA"
            android:text="@string/create_new_todo_atask"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/additems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bgitemtodo"
            android:layout_marginTop="@dimen/d_160dp"
            android:layout_marginLeft="@dimen/d_16dp"
            android:layout_marginRight="@dimen/d_16dp"
            android:padding="@dimen/d_22dp">

            <TextView
                android:id="@+id/addtitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/add_title_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/titletodo"
                android:inputType="text"
                android:layout_below="@+id/addtitle"
                android:padding="@dimen/d_12dp"
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/what_you_do_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bginputaddtask"/>

            <TextView
                android:id="@+id/adddesc"
                android:layout_below="@+id/titletodo"
                android:layout_marginTop="@dimen/d_10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/description_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/desctodo"
                android:layout_below="@+id/adddesc"
                android:inputType="text"
                android:padding="@dimen/d_12dp"
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/how_to_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:background="@drawable/bginputaddtask"/>
            <TextView
                android:id="@+id/adddate"
                android:layout_below="@+id/desctodo"
                android:layout_marginTop="@dimen/d_10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/timeline_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/datetodo"
                android:layout_below="@+id/adddate"
                android:inputType="text"
                android:padding="@dimen/d_12dp"
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/when_will_atask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:background="@drawable/bginputaddtask"/>

            <Button
                android:id="@+id/btnSaveTask"
                android:layout_below="@+id/datetodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20dp"
                android:background="@drawable/button_white"
                android:text="@string/create_now_atask"
                android:textColor="#48F3BE"
                />

            <Button
                android:id="@+id/notify"
                android:layout_below="@+id/btnSaveTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp"
                android:background="@drawable/button_white"
                android:text="@string/notify_atask"
                android:textColor="#48F3BE" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_below="@+id/notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp"
                android:background="@drawable/button_v"
                android:text="@string/cancel_atask"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>